/**app.wxss**/

/**公用样式**/

page {
    height: 100%;
}

view {
    font-size: 28rpx;
}

.bluecolor {
    color: #1e9fff;
}

.ctext {
    text-align: center;
}

.wrap {
    background-color: #F8F8F8;
    position: relative;
    width: 100%;
    height: 100%;
}

.samepadding {
    padding: 0 20rpx;
}

.left15 {
    margin-left: 15rpx;
}

.left10 {
    margin-left: 10rpx;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.clearfix:before, .clearfix:after {
    content: " ";
    display: table;
}

.clearfix:after {
    clear: both;
}

.clearfix {
    zoom: 1;
}

/**为空提示**/

.nonedata {
    text-align: center;
    color: #d2d2d2;
    padding: 50px 0;
}

/**公用表单**/

.formwrap {
    margin-top: 50rpx;
}

.formitem {
    margin-bottom: 30rpx;
}

.forminput {
    border: 1px solid #e2e2e2;
    padding: 0 10px;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
}

.formtextarea {
    width: 665rpx;
    border: 1px solid #e2e2e2;
    padding: 10px;
    height: 300rpx;
    line-height: 30rpx;
    border-radius: 10rpx;
}

.submitBtn {
    font-size: 16px;
    border: none;
    background: #1e9fff;
    color: #fff;
}

/**用户身份标签**/

.ustate {
    color: #1e9fff;
    padding: 0 10rpx;
    margin-left: 10rpx;
    border: 1px solid #1e9fff;
    border-radius: 3px;
}

/**公用banner图片大小**/

.bannerimg {
    width: 100%;
    height: 190px;
}

/**微信头像**/

.uhead {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
}

/**消息列表公用**/

.noticeul {
    background-color: #fff;
    margin-top: 20rpx;
}

.noticeli {
    padding: 30rpx;
}

.rightnotice {
    width: 83%;
    padding-bottom: 18rpx;
    padding-left: 15rpx;
    border-bottom: 1px solid #e2e2e2;
}

.noticename {
    min-height: 40rpx;
    line-height: 40rpx;
}

.msgimg {
    width: 26rpx;
    height: 20rpx;
}

.hide {
    display: none;
}

.noread {
    float: right;
    width: 20rpx;
    height: 20rpx;
    background-color: red;
    border-radius: 50%;
}

/**带点赞的评论列表**/
.itemul {
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.itemli .statetext{
    display: block;
    margin-top: 10rpx;
    margin-bottom: 16rpx;
}
.times{
    height: 64rpx;
    margin-top: 10rpx;
    margin-bottom: 10rpx;
}

.rightname {
    width:600rpx;
    margin-left: 20rpx;
    margin-top: 12rpx;
}

.rightonename {
    margin-left: 20rpx;
    margin-top: 26rpx;
}

.bottomname {
    margin-top: 10rpx;
}

.prostate {
    color: #fff;
    padding: 2rpx 5rpx;
    margin-left: 9rpx;
}
.stateimgwrap {
    margin: 10rpx 0;
}
.stateimg {
    width: 350rpx;
    max-height: 500rpx;
    margin-left: 9rpx;
    margin-bottom: 9rpx;
}
.stateimg:nth-child(3n-2){
    margin-left: 0;
}
.stateimgmore{
    width: 194rpx;
    height: 194rpx;
}

.times text {
    margin-right: 15rpx;
    line-height: 64rpx;
    color: #666666
}

.handelwrap {
    position: relative;
    text-align: right;
    height: 64rpx;
}

.handelimage {
    width: 64rpx;
    height: 64rpx;
}

.iconwrap {
    position: absolute;
    width: 170rpx;
    height: 70rpx;
    line-height: 70rpx;
    right: 70rpx;
    top: -6rpx;
    background-color: #000;
    border-radius: 5rpx;
    opacity: 0.7;
}

.iconwrap .zan {
    width: 55rpx;
    height: 55rpx;
    margin-left: 22rpx;
    margin-top: 8rpx;
}
.activetext {
    width: 80%;
}

.activebtn {
    color: #1e9fff;
}

.inputwarp {
    position: fixed;
    width: 90%;
    bottom: 0;
    padding: 15rpx 5%;
    border-top: 1px solid #e2e2e2;
    background-color: #fff;
}

.zaninput {
    padding: 0 10rpx;
    width: 81%;
    height: 60rpx;
    line-height: 60rpx;
    border: 1px solid #eee;
    border-radius: 5rpx;
}

.send {
    width: 95rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    text-align: center;
    border-radius: 5px;
    background-color: #1e9fff;
}

.discusstext {
    background-color: #eee;
    padding: 5rpx 10rpx;
}

.textitem {
    padding: 5rpx;
}

.textname {
    color: #1e9fff;
}

.bitermul {
    position: relative;
}

.deleteitem {
    position: absolute;
    right: 20rpx;
    top: 25rpx;
    color: #1e9fff;
    z-index: 20;
}
.deleteimage{
    width: 40rpx;
    height: 40rpx;
}
.deleteitem .editimage{
    width: 40rpx;
    height: 40rpx;
}
.itemulwrap{
    background-color: #f0f0f0;
    padding: .1px;
}
.color4 {
    background-color: #3c9; /**水电**/
}
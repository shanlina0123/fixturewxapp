/* pages/Bproject/prodetail/prodetail.wxss */
.detailcontent{
    padding-bottom: 80rpx;
}
.bannerwrap{
    position: relative;
    width: 100%;
}
.viewnum{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    padding:5rpx 10rpx;
    background-color:#fff;
    border-radius: 3px; 
}
.bottom{
    position: absolute;
    bottom: 26rpx;
}
.bottom .addr{
    display: block;
    padding:5rpx 10rpx;
    line-height: 36rpx;
    background-color:#fff;
}
.bottonbtns{
    margin-top: 15rpx;
}
.bottonbtns text{
    margin-right: 15rpx;
    padding:5rpx 10rpx;
    background-color:#fff;
    border-radius: 3px; 
}
.focus{
    position: absolute;
    right: 30rpx;
    bottom: 70rpx;
    color: #fff;
    padding: 10rpx 20rpx;
    border-radius: 3px;
    background-color: #e2e2e2;
}
.focus.on{
    background-color: #1e9fff;
}
.focuswrap{
    padding:20rpx;
    background-color:#fff; 
    border-bottom: 1px solid #e2e2e2
}
.rightnum{
    line-height: 80rpx;
}
.suhead{
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    margin-right: -40rpx;
}
/**切换部分**/
.tabbtns{
    background-color: #fff;
    padding: 20rpx 0;
    border-bottom: 1px solid #e2e2e2
}
.tabbtn{
    width: 33%;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
}
.tabbtn.check{
  color: #01AAED
}
.tabimg{
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
}
.tabbtn text{
    margin-left: 10rpx;
}

.hide{
  display: none
}
.flowitemwarp{
    width: 100%;
    overflow: hidden;
}
.flowwrap{
    margin: 50rpx 0;
    text-align: center;
}
.flow{
    position: relative;
    width: 70rpx;
    height: 40rpx;
    border-top: 3px solid #eee;
}
.flow:first-child{
    border-top: 3px solid transparent
}
.flow.on .number{
    background-color: #1e9fff;
}
.number{
    display: block;
    position: absolute;
    width: 35rpx;
    height: 35rpx;
    line-height: 35rpx;
    right:0;
    top: -21rpx;
    font-size: 20rpx;
    text-align: center;
    border-radius: 50rpx;
    background-color: #eee;
    color: #fff;
    z-index: 20;
}
.flowtext{
    position: absolute;
    width: 100%;
    top: 30rpx;
    right: 0;
    font-size: 24rpx;
    text-align: right;
}

/**底部操作按钮**/
.bottombtns{
    position: fixed;
    width: 94%;
    bottom: 0;
    left: 0;
    padding: 20rpx;
    background-color: #fff;
}
.leftcompany{
    height: 64rpx;
    line-height: 64rpx;
}
.bottomcompany{
    width: 174rpx;
    height: 64rpx;
    margin-right: 10rpx;
    vertical-align: middle;
}
.bottombtn{
    color: #fff;
    background-color: #1e9fff;
    padding: 15rpx 30rpx;
    border-radius: 4rpx;
    margin-left: 15rpx;
}
.linkbtn{
    display: block;
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #1e9fff;
    color: #fff;
    font-size: 28rpx;
    margin: 20rpx auto;
    border-radius: 10rpx;
}
.userli{
    padding: 15rpx 0;
    margin-bottom: 0;
    border-bottom: 1px solid #e2e2e2
}
.handelmsgwrap{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    text-align: center;
    padding: 10rpx 0;
    z-index: 300;
}
.handelmsgwrap .item{
    display: block;
    padding: 20rpx 0;
    border-top: 1px solid #ddd;
}
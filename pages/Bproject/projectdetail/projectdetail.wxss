/* pages/Bproject/prodetail/prodetail.wxss */
.wrap{
    height: auto;
    min-height: 100%;
    padding-bottom: 80rpx;
}
.bannerwrap{
    position: relative;
    width: 100%;
    height: 200px;
}
.bannerimg {
    width: 100%;
    height: 200px;
}

.viewnum{
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    padding:5rpx 10rpx;
    background-color:#fff;
    border-radius: 3px; 
}
.bottom{
    position: absolute;
    bottom: 26rpx;
}
.bottom .addr{
    padding:5rpx 10rpx;
    line-height: 36rpx;
    background-color:#fff;
    border-radius:3px;
}
.bottonbtns{
    margin-top: 15rpx;
}
.bottonbtns text{
    margin-right: 15rpx;
    padding:5rpx 10rpx;
    background-color:#fff;
    border-radius: 3px; 
}
.focus{
    position: absolute;
    right: 30rpx;
    bottom: 70rpx;
    color: #fff;
    padding: 10rpx 20rpx;
    border-radius: 3px;
    background-color: #e2e2e2;
}
.focus.on{
    background-color: #1e9fff;
}
.focuswrap{
    padding:20rpx;
    background-color:#fff; 
    border-bottom: 1px solid #f3f3f3
}

.suhead{
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    border: 1px solid #f0f0f0;
    margin-right: 10rpx;
}
/**切换部分**/
.tabbtns{
    background-color: #fff;
    padding: 20rpx 0;
    border-bottom: 1px solid #e2e2e2
}
.tabbtn{
    width: 33%;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
}
.tabbtn.check{
  color: #01AAED
}
.tabimg{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.tabbtn text{
    margin-left: 10rpx;
}

.hide{
  display: none
}
.flowitemwarp{
    position: relative;
    width: 100%;
    text-align: center;
    overflow: hidden;
}
.flowwrap{
    position: relative;
    width: 100%;
    margin: 50rpx 0;
    text-align: center;
}
.flow{
    position: relative;
    width: 70rpx;
    height: 40rpx;
    border-top: 3px solid #eee;
}
.flow:first-child{
    border-top: 3px solid transparent
}
.flow.on .number{
    background-color: #1e9fff;
}
.number{
    display: block;
    position: absolute;
    width: 35rpx;
    height: 35rpx;
    line-height: 35rpx;
    right:0;
    top: -21rpx;
    font-size: 20rpx;
    text-align: center;
    border-radius: 50rpx;
    background-color: #eee;
    color: #fff;
    z-index: 20;
}
.flowtext{
    position: absolute;
    width: 100%;
    top: 30rpx;
    right: 0;
    font-size: 24rpx;
    text-align: right;
}
.linkbtn{
    display: block;
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #1e9fff;
    color: #fff;
    font-size: 28rpx;
    margin: 20rpx auto;
    border-radius: 10rpx;
}
.userli{
    padding: 15rpx 0;
    margin-bottom: 0;
    border-bottom: 1px solid #e2e2e2
}
/**底部操作按钮**/
.bottombtns{
    position: fixed;
    width: 750rpx;
    bottom: 0;
    left: 0;
    background-color: #fff;
}
.bottombtn{
    width: 50%;
    color: #fff;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    background-color: #1e9fff;
}
.askbtn{
    display: inline-block;
    width: 50%;
    font-size: 30rpx;
    padding-right: 0;
    padding-left: 0;
    padding: 0 0;
    line-height: 80rpx!important;
    color: #fff;
    border-radius: 0;
    border:none!important;
    background-color: #1e9fff;
}
.askbtn::after{
    border: none;
    border-radius: 0;
    border-right: 1px solid #fff;
}
.itemulwrap{
    padding: .1px;
}
.imagewrap image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 16rpx;
}
.protime{
    display: block;
    color: #666;
}
.evaldelete{
    position: unset;
}
.workerdelete{
    margin-top: 26rpx;
}
/*邀请业主评价部分弹窗*/
 .popwrap{
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 20
}
.invitewrap{
    position: fixed;
    width: 94%;
    bottom: 0;
    left: 0;
    padding: 20rpx 3%;
    background-color: #F8F8F8;
} 
.inviteitem{
    text-align: center;
    margin-top: 20rpx;
    padding: 10rpx 0;
    font-size: 28rpx;
    border-top: 1px solid #f0f0f0;
}
.inviteitem:first-child{
    border-top: none;
    margin-top: 0;
}

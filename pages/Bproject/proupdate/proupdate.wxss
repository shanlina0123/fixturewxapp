/* pages/Bproject/proupdate.wxss */

.itemname {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    margin-right: 10rpx;
}

.formitem {
    border-bottom: 1px solid #e2e2e2;
    margin-bottom: 10rpx;
}

.pickerselect {
    display: block;
    width: 76%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 10px;
    text-align: right;
}

.textareawrap {
    position: relative;
}

.number {
    position: absolute;
    right: 10rpx;
    bottom: 3rpx;
    font-size: 24rpx;
    color: #ddd;
}

.formtextarea {
    width:100%;
    padding: 10rpx 0 20rpx;
    border: none;
    min-height: 100px;
    height: auto;
}
.uploadnotice{
    color: #ddd;
}
.submitbtn {
    display: block;
    width: 60%;
    margin: 50px auto 0 auto;
    font-size: 28rpx;
    background-color: #1e9fff;
    color: #fff;
}

        </view>
        <view class='userlist clearfix'>
            <text class='ustate fl'>搬运工</text>
            <text class='uname left10 fl'>李俊俏</text>
            <!--未添加状态的图片按钮-->
            <!-- <image src='../../images/newuser.png' class="addimage fr"></image>  -->

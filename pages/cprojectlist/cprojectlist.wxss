/* pages/cprojectlist/cprojectlist.wxss */
/*筛选条件部分*/
.sortwrap{
    padding: 0 20rpx;
    background-color: #FFFFFF;
}
.sortwrap .sortitem{
    position: relative;
    display: inline-block;
    text-align: center;
    width: 25%;
    padding: 20rpx 0;
}
.sortitem .trangle{
    position: absolute;
    left: 150rpx;
    top: 40rpx;
    width:0;
    height:0;
    border-left:10rpx solid transparent;
    border-right:10rpx solid transparent;
    border-top:10rpx solid #444444;
}
.sortwrap .sortitem.on{
    color: #01AAED;
}
.sortwrap .sortitem.on .trangle{
    border-top:10rpx solid #01AAED;
}
.sortcontentwrap{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 78rpx;
    left: 0;
}
.sortcontent{
    padding: 10rpx 30rpx;
    height: 300rpx;
    overflow: auto;
}
.contenttext{
    display: block;
    line-height: 60rpx;
    padding: 10rpx 0 10rpx 20rpx;
    border-bottom: 1px solid #DDDDDD;
}
.contenttext.on{
    color: #01AAED;
}
/*列表数据部分*/
.prolist {
    margin-top: 20rpx;
    padding: 10px 20rpx;
    background-color: #fff;
}

.proimage {
    width: 200rpx;
    height: 200rpx;
}

.proright {
    margin-left: 15rpx;
    width:495rpx;
}
.proright .pname{
    font-size: 30rpx;
    font-weight: bold;
    line-height: 60rpx;
}
.proright .pname .prostate{
    font-size: 28rpx;
    font-weight: normal;
}
.psytle{
    color: #999999;
    font-size: 24rpx;
    padding: 10rpx 0;
    padding-left: 10rpx;
}
.paddr{
    line-height: 40rpx;
    padding-left: 10rpx;
}
/* pages/cprojectlist/cprojectlist.wxss */
/*筛选条件部分*/
.sortwrap{
    padding: 20rpx 20rpx;
    background-color: #FFFFFF;
}
.sortwrap .sortitem{
    display: inline-block;
    text-align: center;
    width: 25%;
}
.sortwrap .sortitem.on{
    color: #01AAED;
}
.sortcontentwrap{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 78rpx;
    left: 0;
}
.sortcontent{
    padding: 10rpx 30rpx;
    background-color: #FFFFFF;
}
.contenttext{
    display: block;
    line-height: 60rpx;
    padding-left: 20rpx;
    border-top: 1px solid #DDDDDD;
}
/*列表数据部分*/
.prolist {
    margin-top: 20rpx;
    padding: 10px 20rpx;
    background-color: #fff;
}

.proimage {
    width: 200rpx;
    height: 200rpx;
}

.proright {
    margin-left: 15rpx;
    width:495rpx;
}
.proright .pname{
    font-size: 30rpx;
    font-weight: bold;
    line-height: 60rpx;
}
.proright .pname .prostate{
    font-size: 28rpx;
    font-weight: normal;
}
.psytle{
    color: #999999;
    font-size: 24rpx;
    padding: 10rpx 0;
    padding-left: 10rpx;
}
.paddr{
    line-height: 40rpx;
    padding-left: 10rpx;
}
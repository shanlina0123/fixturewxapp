                                <radio value='油漆' disabled='true'></radio>油漆</label>
                        </radio-group>
                    </view>
                </view>
                <view class='evalformitem clearfix'>
                    <view class='centerwrap fl'>
                        <view class='evalimgwrap'>
                            <image src="../../images/evalOn.png"></image>
                            <image src="../../images/evalOn.png"></image>
                            <image src="../../images/evalOn.png"></image>
                            <image src="../../images/evalOn.png"></image>
                            <image src="../../images/eval.png"></image>
                        </view>
                    </view>
                </view>
                <view class='evalformitem clearfix'>
                    <view class='textareawrap fl'>
                        <textarea class='evaltextarea' placeholder='您的评价很重要哦....'></textarea>
                    </view>
                </view>
            </view>
            <button form-type='submit' class='submitbtn'>立即提交</button>
        </form>
    </view>
</view>
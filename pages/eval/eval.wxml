        <form class='evalformm'>
            <view class='evalformwrap'>
                <view class='evalformitem topname clearfix'>
                    <text class='lefttext fl'>项目:</text>
                    <view class='rightwrap fl'>
                        <text class='proaddr'>西安市未央区龙首原印象城</text>
                    </view>
                </view>
                <view class='evalformitem clearfix'>
                    <view class='centerwrap fl'>
                        <radio-group class="radiogroup">
                            <label>
                                <radio value='签约'></radio>签约</label>
                            <label>
                                <radio value='设计'></radio>设计</label>
                            <label>
                                <radio value='拆改'></radio>拆改</label>
                            <label>
                                <radio value='水电'></radio>水电</label>
                            <label>
                                <radio value='泥木'></radio>泥木</label>

/**index.wxss**/
/*C端首页*/
.wrap{
    padding: 0;
}
.topbgwrap{
    width: 100%;
    padding: .1px;
}
.company{
    padding: 20rpx;
    background-color: #fff;
    font-size: 36rpx;
    margin-top: 20rpx;
}
.leftlogo image{
    width: 150rpx;
    height: 100rpx;
}
.rightcompany{
    margin-left: 20rpx;
}
.companyname{
    font-size: 28rpx;
}
.companyaddr{
    color: #9F9B9A
}
.companyphone{
    color: #01AAED
}
.buttonwrap {
    background-color: #fff;
    padding: 15rpx 0;
    margin-top: 20rpx;
}

.topbtnwrap{
    padding: 20rpx;
    background-color: #FFF;
    margin-top: 20rpx;
}
.topbtnwrap .topitem{
    margin-left: 10rpx;
    width: 330rpx;
    height: 180rpx;
    position: relative;
}
.topbtnwrap .topitem:first-child{
    width: 350rpx;
    height: 370rpx;
    margin-left: 0
}
.topbtnwrap .topitem:last-child{
    margin-top: 10rpx;
}
.topbtnwrap .bigtext{
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    font-size: 30rpx;
    line-height: 35rpx;
}
.topbtnwrap .smalltext{
    position: absolute;
    top: 40rpx;
    left: 20rpx;
    font-size: 26rpx;
    color: #9F9B9A;
    padding-top: 20rpx;
}
.topbtnwrap .firstimage{
    width: 350rpx;
    height: 370rpx;
    position: absolute;
    top: 0;
    left: 0;
}
.topbtnwrap .secondimage,.topbtnwrap .thirdimage{
    width: 330rpx;
    height: 180rpx;
    position: absolute;
    top: 0;
    left: 0;
}








.centerbtn {
    display: inline-block;
    width: 31%;
    margin-left: 3.5%;
    text-align: center;
}
.topicon{
    display: block;
    width:64rpx;
    height: 64rpx;
    margin: 10rpx auto;
}

.centerbtn:first-child {
    margin-left: 0;
}

.centertitle {
    display: block;
    font-size: 32rpx;
    padding: 20rpx 20rpx 0 20rpx;
}
/*选择门店弹窗*/
.changewrap{
    display: none;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    z-index: 200;
}
.toptext{
    display: block;
    font-size: 32rpx;
    text-align: center;
    padding-top: 20px;
    color: #fff;
}
.topsmall{
    display: block;
    font-size: 24rpx;
    text-align: center;
    color: #ddd;
    padding: 10px 0;
}
.storelink{
    display: block;
    width: 90%;
    margin: 10px 5%;
    color: #fff;
    border: 1px solid #f0f0f0;
    text-align: center;
    padding: 10px 0;
}
/*B端首页*/
.userlevel{
    background-color: #fff;
    text-align: center;
}
.levelBtn{
    display: inline-block;
    border: 1px solid #f0f0f0;
    padding: 8rpx 40rpx;
    border-radius: 10rpx;
}
.Bbuttonwrap .centerbtn{
    width: 25%;
    margin: 0;
}

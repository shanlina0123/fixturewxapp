<!--pages/usercenter/project/projectdetail.wxml-->
<view class='content'>
    <view class='bannerwrap samepadding'>
        <image src='../../../images/banner.jpg' class='bannerimg'></image>
        <view class='viewnum'>浏览:20</view>
        <view class='bottom'>
            <text class='addr'>西安市莲湖区龙首原印象城</text>
            <view class='bottonbtns'>
                <text>简装</text>
                <text>10万</text>
                <text>两室一厅</text>
                <text>75m2</text>
                <text>简欧</text>
            </view>
        </view>
        <text class="focus {{focustext == '关注' ? 'on':'' }}" bindtap="changeName">{{focustext}}</text>
    </view>
    <view class='focuswrap clearfix'>
        <view class='lefthead fl'>
            <image src='../../../images/uhead.png' class='suhead'></image>
            <image src='../../../images/uhead.png' class='suhead'></image>
            <image src='../../../images/uhead.png' class='suhead'></image>
        </view>
        <text class='rightnum fr'>1人关注</text>
    </view>
    <view class='tabwrap'>
        <view class='tabbtns clearfix'>
            <view class="tabbtn fl {{selected1 ? on :''}}" bindtap="tab1">
                <image src='../../../images/proicon1.png' class='tabimg'></image>
                <text>进度</text>
            </view>
            <view class="tabbtn fl {{selected2 ? on : ''}}" bindtap="tab2">
                <image src='../../../images/proicon2.png' class='tabimg'></image>
                <text>评价</text>
            </view>
            <view class="tabbtn fl {{selected3 ? on : ''}}" bindtap="tab3">
                <image src='../../../images/proicon3.png' class='tabimg'></image>
                <text>团队</text>
            </view>
        </view>
        <view class='tabcontent samepadding'>
            <view class="tabitem {{selected1?'':hide}}">
                <view class='flowitemwarp'>
                    <view class='flowwrap clearfix'  style='background: url(../../../images/rightbg.png) 98% 10rpx no-repeat'>
                        <view class='flow fl on'>
                            <text class='number'>1</text>
                            <text class='flowtext'>签约</text>
                        </view>
                        <view class='flow fl on'>
                            <text class='number'>2</text>
                            <text class='flowtext'>设计</text>
                        </view>
                        <view class='flow fl on'>
                            <text class='number'>3</text>
                            <text class='flowtext'>拆改</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>4</text>
                            <text class='flowtext'>水电</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>5</text>
                            <text class='flowtext'>泥木</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>6</text>
                            <text class='flowtext'>油漆</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>7</text>
                            <text class='flowtext'>签约</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>8</text>
                            <text class='flowtext'>设计</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>9</text>
                            <text class='flowtext'>拆改</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>10</text>
                            <text class='flowtext'>水电</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>11</text>
                            <text class='flowtext'>泥木</text>
                        </view>
                        <view class='flow fl'>
                            <text class='number'>12</text>
                            <text class='flowtext'>油漆</text>
                        </view>
                    </view>
                </view>
                







                <view class='itemul'>
                    <view class='itemli clearfix'>
                        <image src="../../../images/uhead.png" class='uhead fl'></image>
                        <view class='rightname fl'>
                            <view class='topname'>
                                <text class='uname'>张小姐</text>
                                <text class='ustate left10'>管理员</text>
                            </view>
                            <view class='bottomname'>
                                <text class='proname'>未央区龙首印象城</text>
                                <text class='prostate color4'>水电</text>
                            </view>
                        </view>
                    </view>
                    <view class='itemli statecontent'>
                        <text class='statetext'>水电正在整改当中，做了很多的功课，期待...</text>
                    </view>
                    <view class='itemli times clearfix'>
                        <text class='fl'>2小时前</text>
                        <text class='fl'>点赞:10</text>
                        <view class='handelwrap fr'>
                            <image src='../../../images/rightMsg.png' class='handelimage' bindtap='showimage'></image>
                            <view class="iconwrap clearfix {{isshow ?'': 'hide' }}">
                                <image src="../../../images/zan1.png" class='zan fl'></image>
                                <image src="../../../images/zan2.png" class='zan fl' bindtap='showinput'></image>
                            </view>
                        </view>
                    </view>
                    <view class='itemli discusstext'>
                        <view class='textitem'><text class='textnam'>张俊梅：</text> 很不错，我很满意</view>
                        <view class='textitem'><text class='textnam'>张腊梅：</text> 我也很满意</view>
                    </view>
                </view>
            </view>
            <view class="tabitem {{selected2?'':hide}}">
                <view class='itemul'>
                    <view class='itemli clearfix'>
                        <image src="../../../images/uhead.png" class='uhead fl'></image>
                        <view class='rightname fl'>
                            <view class='topname'>
                                <text class='uname'>张小姐</text>
                                <text class='ustate left10'>业主</text>
                            </view>
                            <view class='bottomname'>
                                <text class='proname'>2小时前</text>
                            </view>
                        </view>
                    </view>
                    <view class='itemli statecontent'>
                        <text class='statetext'>装修质量很满意，给师傅们点赞</text>
                    </view>
                </view>
            </view>
            <view class="tabitem {{selected3?'':hide}}">
                <view class='itemul'>
                    <view class='itemli clearfix'>
                        <image src="../../../images/uhead.png" class='uhead fl'></image>
                        <view class='rightname fl'>
                            <view class='topname'>
                                <text class='uname'>张俊俏</text>
                                <text class='ustate left10'>工长</text>
                            </view>
                        </view>
                    </view>
                    <view class='itemli clearfix'>
                        <image src="../../../images/uhead.png" class='uhead fl'></image>
                        <view class='rightname fl'>
                            <view class='topname'>
                                <text class='uname'>李俊俏</text>
                                <text class='ustate left10'>工长</text>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <!--底预约参观按钮-->
    <view class='bottombtns clearfix'>
        <view class='leftcompany fl'>
            <image src='../../../images/logo.png' class='bottomcompany'></image>
            <text>熊先森科技有限公司</text>
        </view>
        <navigator url='visit'  class='bottombtn fr'>预约参观</navigator>
        <navigator  class='bottombtn fr'>在线咨询</navigator>
    </view>
    <!--评论输入框-->
    <view class="inputwarp clearfix {{inputisshow ? '' :'hide'}}">
        <input class='zaninput fl' type='text' placeholder='评论'></input>
        <text class='send left10 fl' bindtap='closeinput'>发送</text>
    </view>
</view>


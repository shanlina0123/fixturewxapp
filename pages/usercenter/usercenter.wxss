/* pages/usercenter/usercenter.wxss */
.userwrap{
    position: relative;
    height: 190px;
}
.headbg{
    width: 100%;
    height: 160px;
}
.usermsgwrap{
    position: absolute;
    width: 100%;
    bottom: -50rpx;
    text-align: center;
}
.usermsgwrap >image{
    width: 128rpx;
    height: 128rpx;
    border-radius: 128rpx;
    border: 6rpx solid #fff; 
}
.usermsgwrap view{
    font-size: 30rpx;
    line-height: 40rpx;
}
.editname{
    width: 40rpx;
    height: 40rpx;
    margin-top: 10rpx;
    margin-left: 16rpx;
}
.proul{
    padding: 0 30rpx;
    margin-top: 90rpx;
}
.proul navigator{
    padding: 30rpx 0;
    border-top: 1px solid #eee;
}
.proul navigator text{
    line-height: 32rpx;
}
.itemicon{
    width: 45rpx;
    height: 45rpx;
    vertical-align: middle;
}
/*编辑用户姓名弹窗*/
.editwrap{
    padding: 20rpx;
}
.popinput{
    height: 60rpx;
    line-height: 60rpx;
    padding: 0 10rpx;
    border: 1px solid #e2e2e2;
}